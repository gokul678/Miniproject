<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

  <ImageView
      android:id="@+id/button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.942"
      app:srcCompat="@drawable/button_background_blue" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="374dp"
      android:layout_height="318dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.567"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.004"
      app:srcCompat="@mipmap/bottom2" />

  <EditText
      android:id="@+id/reason"
      android:layout_width="338dp"
      android:layout_height="235dp"
      android:layout_gravity="center"
      android:layout_marginBottom="48dp"
      android:background="@mipmap/rec"
      android:drawablePadding="20dp"
      android:gravity="left"
      android:hint="Write Reason..."
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:textColor="@color/black"
      app:layout_constraintBottom_toTopOf="@+id/button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.493"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="98dp"
      android:layout_height="36dp"
      android:layout_marginStart="62dp"
      android:text="SELECT DATES"
      android:textColor="@color/white"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.374"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/reason"
      app:layout_constraintVertical_bias="0.877" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="195dp"
      android:layout_height="176dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.074"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.052"
      app:srcCompat="@mipmap/ellipse_1" />

  <TextView
      android:id="@+id/nameview"
      android:layout_width="121dp"
      android:layout_height="66dp"
      android:textStyle="bold"
      android:textColor="@color/whiteTextColor"
      android:textSize="25dp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView3"
      app:layout_constraintEnd_toEndOf="@+id/imageView3"
      app:layout_constraintHorizontal_bias="0.702"
      app:layout_constraintStart_toStartOf="@+id/imageView3"
      app:layout_constraintTop_toTopOf="@+id/imageView3"
      app:layout_constraintVertical_bias="0.481" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="223dp"
      android:layout_height="134dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.048"
      app:srcCompat="@mipmap/ellipse_2" />

  <TextView
      android:id="@+id/semview"
      android:layout_width="87dp"
      android:layout_height="48dp"
      android:textStyle="bold"
      android:textSize="20dp"
      android:textColor="@color/whiteTextColor"
      app:layout_constraintBottom_toBottomOf="@+id/textView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.885"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imageView2"
      app:layout_constraintVertical_bias="0.106" />

  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="116dp"
      android:layout_height="119dp"
      android:layout_marginTop="161dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.715"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imageView2"
      app:layout_constraintVertical_bias="0.031"
      app:srcCompat="@mipmap/ellipse_3" />

  <TextView
      android:id="@+id/depview"
      android:layout_width="95dp"
      android:layout_height="55dp"
      android:layout_marginStart="69dp"
      android:layout_marginTop="48dp"
      android:layout_marginEnd="13dp"
      android:layout_marginBottom="33dp"
      android:textColor="@color/whiteTextColor"
      android:textSize="15dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/imageView5"
      app:layout_constraintEnd_toEndOf="@+id/imageView5"
      app:layout_constraintHorizontal_bias="0.542"
      app:layout_constraintStart_toEndOf="@+id/imageView5"
      app:layout_constraintStart_toStartOf="@+id/imageView5"
      app:layout_constraintTop_toTopOf="@+id/imageView5"
      app:layout_constraintVertical_bias="0.647" />

</androidx.constraintlayout.widget.ConstraintLayout>